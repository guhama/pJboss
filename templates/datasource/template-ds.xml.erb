<datasources xmlns="http://www.jboss.org/ironjacamar/schema">
  <datasource jta="<%= @jta %>" jndi-name="<%= @jndi_name %>" pool-name="<%= @pool_name %>" enabled="true" use-ccm="false">
    <connection-url><%= @url %></connection-url>
    <driver-class><%= @driver_class %></driver-class>
    <driver><%= @driver %></driver>
    <new-connection-sql><%= @new_connection_sql %></new-connection-sql>
    <security>
      <user-name><%= @username %></user-name>
      <password><%= @password %></password>
    </security>
<% if @pool_options %>    <pool>
<% @pool_options.each do |k, option| -%>
      <%= "<#{k}>#{option}</#{k}>" %>
<% end -%>
    </pool>
<% end -%>
    <validation>
      <validate-on-match>false</validate-on-match>
      <background-validation>false</background-validation>
    </validation>
    <statement>
      <share-prepared-statements>false</share-prepared-statements>
    </statement>
  </datasource>
</datasources>
